{
  "manifest_version": 2,
  "name": "Fanfic downloader",
  "description": "Extension to automatically download fanfic file when fanfic page opens on Ao3",
  "version": "1.5.0",
  "browser_action":
  {
    "default_popup": "popup.html",
    "default_title": "Fanfic downloader"
  },
  "content_scripts": [
  {
    "matches": ["https://archiveofourown.org/*", "https://www.archiveofourown.org/*"],
    "js": ["content.js"]
  }],

  "permissions": ["storage", "tabs", "https://archiveofourown.org/*", "https://www.archiveofourown.org/*"],
  "options_page": "options.html"
}
